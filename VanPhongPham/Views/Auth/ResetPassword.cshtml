@{
    ViewBag.Title = "Đặt lại mật khẩu - QVD";
    Layout = "~/Views/Shared/_LayoutClient.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ResetPassword</title>
    <link rel="stylesheet" type="text/css" href="~/Content/bootstrap.css">
    <link href="~/Public/css/style.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
    <script src="~/Scripts/bootstrap.min.js"></script>
    <style>
        .nav-item {
            margin-right: 20px;
        }

        .top-bar {
            background-color: #C43240;
            padding: 5px 0;
        }

        .top-bar .nav-link {
            margin-left: 15px;
            font-size: 22px;
        }

        .top-bar .nav-link:hover {
            color: #adb5bd;
        }

        .logo img {
            max-height: 80px;
            width: 100%;
            object-fit: contain;
        }

        .is-invalid {
            border-color: red;
        }

        .invalid-feedback {
            display: none;
            color: red;
            font-size: 12px;
        }

        .is-invalid ~ .invalid-feedback {
            display: block;
        }

        .icon-back {
            display: flex;
            align-items: center;
        }

        section {
            display: flex;
            margin: 150px auto 0;
            max-width: 600px;
        }

        form {
            text-align: center;
        }

        .display-5 {
            display: inline-block;
            margin: 0;
            font-size: 22px;
            font-weight: 400;
        }
    </style>
    <script src="https://www.gstatic.com/firebasejs/8.6.1/firebase-app.js"></script>
    <script src="https://www.gstatic.com/firebasejs/8.6.1/firebase-auth.js"></script>
    <script src="~/Public/js/User.js"></script>
</head>
<body>
    <!-- Login 11 - Bootstrap Brain Component -->
    <section class="py-3 py-md-5 py-xl-8 bg-white" style="border-radius: 5px; box-shadow: #6b6b6b 0px 1px 8px 0px;">
        <div class="container">
            <div class="row justify-content-between align-items-center">
                <div class="col-2 text-start">
                    <a href="/Auth/Login" class="icon-back">
                        <img src="~/Public/img/icons/icons8-back-100.png" width="40" height="40" alt="Back" />
                    </a>
                </div>

                <div class="col-8 text-center">
                    <p class="display-5">Đặt lại mật khẩu</p>
                </div>

                <div class="col-2"></div>
            </div>
            <div class="row justify-content-center mt-4">
                <div class="col-8">
                    <form id="loginForm">
                        <div class="row gy-3 overflow-hidden">
                            <div class="col-12">
                                <img src="~/Public/img/icons/icons8-email-100.png" />
                                <div class="form-floating mb-3">
                                    <p>Mã xác minh đã được gửi đến địa chỉ email</p>
                                    <p style="color: red">@ViewBag.Email.</p>
                                    <p>Vui lòng xác minh.</p>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="d-grid">
                                    <a href="/Auth/Login">
                                        <input class="btn btn-primary d-block" value="OK" id="signin-password" type="button" style="width: 100%" />
                                    </a>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>

    <script>

    </script>
</body>
</html>
