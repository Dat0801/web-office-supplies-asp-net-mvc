    const maxImages = 6; // Giới hạn số ảnh
    let selectedFiles = []; // Mảng chứa các file ảnh đã chọn

    // Xử lý sự kiện nút "Thêm hình ảnh"
    document.getElementById("uploadImageBtn").addEventListener("click", function () {
        if (selectedFiles.length < maxImages) {
