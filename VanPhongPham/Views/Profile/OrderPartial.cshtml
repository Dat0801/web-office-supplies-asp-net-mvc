            alert(`Bạn chỉ được tải lên tối đa ${maxImages} ảnh.`);
        }
    });

    // Xử lý khi người dùng chọn ảnh
    document.getElementById("imageInput").addEventListener("change", function (event) {
        const files = Array.from(event.target.files);
        const previewContainer = document.getElementById("imagePreviewContainer");

        files.forEach(file => {
            // Kiểm tra kích thước file (2MB = 2 * 1024 * 1024 bytes)
            if (file.size > 2 * 1024 * 1024) {
                alert(`Ảnh "${file.name}" vượt quá giới hạn 2MB và sẽ không được thêm.`);
                return;
            }

            // Kiểm tra tổng số ảnh đã chọn
            if (selectedFiles.length >= maxImages) {
                alert(`Bạn chỉ được thêm tối đa ${maxImages} ảnh.`);
                return;
            }

            selectedFiles.push(file); // Thêm file vào mảng
            displayImagePreview(file, previewContainer); // Hiển thị preview
        });

        updateImageCount();
    });

    // Hiển thị preview ảnh
    function displayImagePreview(file, container) {
        const reader = new FileReader();
        reader.onload = function (e) {
            const imageContainer = document.createElement("div");
            imageContainer.style.position = "relative";
            imageContainer.style.width = "100px";
            imageContainer.style.height = "100px";

            const img = document.createElement("img");
            img.src = e.target.result;
            img.alt = "Hình ảnh liên quan";
            img.style.width = "100%";
            img.style.height = "100%";
            img.style.objectFit = "contain"; // Thay đổi từ 'cover' sang 'contain'
            img.style.border = "1px solid #ddd";
            img.style.borderRadius = "5px";

            const removeButton = document.createElement("button");
            removeButton.classList.add("p-1")
            removeButton.innerHTML = "X";
            removeButton.style.position = "absolute";
            removeButton.style.top = "5px";
            removeButton.style.right = "0px";
            removeButton.style.backgroundColor = "red";
            removeButton.style.color = "white";
            removeButton.style.border = "none";
            removeButton.style.borderRadius = "60%";
            removeButton.style.cursor = "pointer";
            removeButton.addEventListener("click", function () {
                const index = Array.from(container.children).indexOf(imageContainer);
                selectedFiles.splice(index, 1); // Xóa file khỏi mảng
                container.removeChild(imageContainer); // Xóa preview
                updateImageCount();
            });

            imageContainer.appendChild(img);
            imageContainer.appendChild(removeButton);
            container.appendChild(imageContainer);
        };
        reader.readAsDataURL(file);
    }

    // Cập nhật số lượng ảnh
    function updateImageCount() {
        const imageCountText = document.getElementById("imageCount");
        imageCountText.textContent = `Đã chọn: ${selectedFiles.length}/${maxImages} ảnh`;
    }

