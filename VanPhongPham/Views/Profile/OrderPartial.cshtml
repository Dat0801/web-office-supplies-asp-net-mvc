                    imageInput.value = ""; // Reset input file
                    imagePreviewContainer.innerHTML = ""; // Xóa toàn bộ preview ảnh
                    imageCount.textContent = `Đã chọn: 0/${maxImages} ảnh`; // Đặt lại số lượng ảnh đã chọn

                    // Truyền dữ liệu vào nút xác nhận trong modal
                    confirmReturnBtn.setAttribute("data-orderid", orderid);
                    confirmReturnBtn.setAttribute("data-ordercode", ordercode);

                    // Mở modal
                    const bootstrapModal = new bootstrap.Modal(returnModal);
                    bootstrapModal.show();

                    document.body.style.overflowY = "scroll";
                };
            }
            else if (cancelrequested == 0 && daysPassed > 7) {
                btnReturnOrder.classList.add("disabled");
                btnReturnOrder.textContent = "Quá hạn yêu cầu trả hàng";
                btnReturnOrder.onclick = null;
            }
            else if (cancelrequested == 1) {
                btnReturnOrder.classList.add("disabled");
                btnReturnOrder.textContent = "Đã gửi yêu cầu trả đơn hàng";
                btnReturnOrder.onclick = null;
            }
            else if (cancelrequested == 2)
            {
                btnReturnOrder.classList.add("disabled");
                btnReturnOrder.textContent = "Yêu cầu trả đơn hàng bị từ chối";
                btnReturnOrder.onclick = null;
            }
