@model List<VanPhongPham.Models.supplier>
@{
    ViewBag.Title = "Nhà cung cấp - Quản Trị";
}
<div class="card mb-4">
    <h6 class="card-header">Thêm mới nhà cung cấp</h6>
    <div class="card-body">
        <form method="post" action="/Supplier/AddSupplier">
            <div class="form-row">
                <div class="form-group col-md-3">
                    <label for="supplier_name">Tên nhà cung cấp</label>
                    <input type="text" class="form-control" id="supplier_name" name="supplier_name" readonly value="@ViewBag.supplier_id" />
                    <div class="clearfix"></div>
                </div>
                <div class="form-group col-md-3">
                    <label for="supplier_name">Tên nhà cung cấp</label>
                    <input type="text" class="form-control" id="supplier_name" name="supplier_name" required />
                    <div class="clearfix"></div>
                </div>
                <div class="form-group col-md-3">
                    <label for="email">Email</label>
                    <input type="email" class="form-control" id="email" name="email" required />
                    <div class="clearfix"></div>
                </div>
                <div class="form-group col-md-3">
                    <label for="phone_number">Số điện thoại</label>
                    <input type="text" class="form-control" id="phone_number" name="phone_number" required />
                    <div class="clearfix"></div>
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Sign in</button>
        </form>
    </div>
</div>
<h4 class="font-weight-bold py-3 mb-0">Danh sách nhà cung cấp</h4>
<div class="row">

    <div class="navbar-nav my-3 ml-2">
        <!-- Search -->
        <label class="nav-item navbar-text navbar-search-box p-0 active">
            <a href="#"><i class="feather icon-search navbar-icon align-middle"></i></a>
            <span class="navbar-search-input pl-2">
                <input type="text" class="form-control navbar-text mx-2" placeholder="Tìm kiếm...">
            </span>
        </label>
    </div>
    <!-- Search -->
    <a class="btn icon-btn btn-outline-primary my-3 ml-3" href="@Url.Action("AddSupplier","Supplier")">
        <i class="feather icon-user-plus navbar-icon align-middle"></i>
    </a>
</div>

<div class="card">
    <table class="table card-table table-responsive-md">
        <thead class="thead-light">
            <tr>
                <th>Mã nhà cung cấp</th>
                <th>Tên nhà cung cấp</th>
                <th>Email</th>
                <th>Số điện thoại</th>
                <th>Hành động</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var supplier in Model)
            {
                <tr>
                    <td>@supplier.supplier_id</td>
                    <td>@supplier.supplier_name</td>
                    <td>@supplier.email</td>
                    <td>@supplier.phone_number</td>
                    <td>
                        <button type="button" class="btn icon-btn btn-outline-danger">
                            <i class="feather icon-user-minus navbar-icon align-middle"></i>
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


